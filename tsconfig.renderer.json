{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@assets/*": ["../assets/*"],
      "@client/*": ["./client/*"],
      "@extension-host/*": ["./extension-host/*"],
      "@extensions/*": ["../extensions/dist/*"],
      "@main/*": ["./main/*"],
      "@node/*": ["./node/*"],
      "@renderer/*": ["./renderer/*"],
      "@shared/*": ["./shared/*"],
      "@node_modules/*": ["../node_modules/*"],
      "@process/*": [
        "./renderer/process-implementations/*",
        "./client/process-implementations/*",
        "./electron/process-implementations/*"
      ]
    }
  }
}
